{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Build Map Driver",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", 
                "Player.cpp",
                "$(find ./Map/ -type f -not -iname \"*Driver.cpp\" -iname \"*.cpp\")",
                "$(find ./MapLoader/ -type f -not -iname \"*Driver.cpp\" -iname \"*.cpp\")",
                "$(find ./CardComponents/ -type f -iname \"*.cpp\")",
                "-o",
                "./Debug/COMP345_Game"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}